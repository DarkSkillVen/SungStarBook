<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:background="#fff"
                android:orientation="vertical"
                android:paddingTop="?attr/actionBarSize"
                android:layout_margin="@dimen/normal_margin">

    <TextView
            android:id="@+id/roomUserList"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/chat_room_user_list"
            android:textStyle="bold"
            android:layout_alignParentEnd="true"
            android:textSize="20sp"/>

    <TextView
            android:id="@+id/deving"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@id/roomUserList"
            android:text="@string/will_be_added"
            android:layout_alignParentEnd="true"
            android:textSize="20sp"/>

    <TextView
            android:id="@+id/getRoomUid"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/copy_room_uid"
            android:textStyle="italic"
            android:layout_alignParentEnd="true"
            android:layout_centerInParent="true"
            android:textSize="20sp"/>

</RelativeLayout>