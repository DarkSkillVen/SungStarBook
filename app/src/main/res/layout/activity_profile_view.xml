<?xml version="1.0" encoding="utf-8"?>
<androidx.coordinatorlayout.widget.CoordinatorLayout
        xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:tools="http://schemas.android.com/tools"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        tools:context=".view.ProfileViewActivity"
        tools:ignore="RtlHardcoded">

    <include layout="@layout/content_profile_view"/>

    <com.github.clans.fab.FloatingActionMenu
            xmlns:fab="http://schemas.android.com/apk/res-auto"
            android:id="@+id/menu"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="bottom|right"
            android:layout_margin="16dp"
            fab:menu_fab_size="normal"
            fab:menu_showShadow="true"
            fab:menu_colorNormal="@color/colorAccent"
            fab:menu_colorPressed="@color/colorAccent"
            fab:menu_colorRipple="#99FFFFFF"
            fab:menu_animationDelayPerItem="50"
            fab:menu_icon="@drawable/ic_edit_white_24dp"
            fab:menu_labels_showAnimation="@anim/fab_slide_in_from_right"
            fab:menu_labels_hideAnimation="@anim/fab_slide_out_to_right"
            fab:menu_labels_padding="8dp"
            fab:menu_labels_textSize="14sp"
            fab:menu_labels_cornerRadius="15dp"
            fab:menu_labels_showShadow="true"
            fab:menu_labels_textColor="@color/colorAccent"
            fab:menu_labels_colorNormal="@color/colorPrimary"
            fab:menu_labels_colorPressed="@color/colorPrimary"
            fab:menu_labels_colorRipple="#99FFFFFF"
            fab:menu_labels_singleLine="false"
            fab:menu_labels_ellipsize="none"
            fab:menu_labels_maxLines="-1"
            fab:menu_labels_position="left"
            fab:menu_openDirection="up"
            fab:menu_backgroundColor="@android:color/transparent"
            fab:menu_fab_label="수정 항목 선택"
            fab:menu_fab_show_animation="@anim/fab_slide_in_from_right"
            fab:menu_fab_hide_animation="@anim/fab_slide_out_to_right">

        <com.github.clans.fab.FloatingActionButton
                android:id="@+id/now_text_edit"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:src="@drawable/ic_textsms_gray_24dp"
                fab:fab_colorNormal="@color/colorPrimary"
                fab:fab_colorPressed="@color/colorPrimary"
                fab:fab_colorRipple="#99FFFFFF"
                fab:fab_size="mini"
                fab:fab_label="상태 메세지" />

        <com.github.clans.fab.FloatingActionButton
                android:id="@+id/profile_image_edit"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:src="@drawable/ic_face_gray_24dp"
                fab:fab_colorNormal="@color/colorPrimary"
                fab:fab_colorPressed="@color/colorPrimary"
                fab:fab_colorRipple="#99FFFFFF"
                fab:fab_size="mini"
                fab:fab_label="프로필 사진" />

        <com.github.clans.fab.FloatingActionButton
                android:id="@+id/back_image_edit"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:src="@drawable/ic_image_gray_24dp"
                fab:fab_colorNormal="@color/colorPrimary"
                fab:fab_colorPressed="@color/colorPrimary"
                fab:fab_colorRipple="#99FFFFFF"
                fab:fab_size="mini"
                fab:fab_label="배경 사진" />

    </com.github.clans.fab.FloatingActionMenu>

</androidx.coordinatorlayout.widget.CoordinatorLayout>